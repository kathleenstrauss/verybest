<h1>
  Edit venue #<%= @venue.id %>
</h1>

<hr>

<!-- Form venue start -->
<form action="/update_venue/<%= @venue.id %>" method="post">
<!-- Form venue end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @venue.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for address start -->
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <!-- Input for address start -->
    <input type="text" id="address" name="address" class="form-control" value="<%= @venue.address %>">
    <!-- Input for address end -->
  </div>
  <!-- Label and input for address end -->

  <!-- Label and input for neighboorhood_id start -->
  <div class="form-group">
    <label for="neighboorhood_id">
      Neighboorhood
    </label>

    <!-- Input for neighboorhood_id start -->
    <%= select_tag(:neighboorhood_id, options_from_collection_for_select(Neighborhood.all, :id, :name, @venue.neighboorhood_id), :class => "form-control") %>
    <!-- Input for neighboorhood_id end -->
  </div>
  <!-- Label and input for neighboorhood_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update venue
  </button>
</form>

<hr>

<a href="/venues">
  Go back
</a>
